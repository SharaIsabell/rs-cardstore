    <script>
        // Seleciona os elementos do DOM
        const themeSwitch = document.getElementById('theme-checkbox');
        const body = document.body;

        // Função para aplicar o tema correto na inicialização
        const applyTheme = () => {
            const savedTheme = localStorage.getItem('theme');
            // Se o tema salvo for 'dark', aplica a classe e MARCA o checkbox
            if (savedTheme === 'dark') {
                body.classList.add('dark-mode');
                themeSwitch.checked = true;
            } else {
                body.classList.remove('dark-mode');
                themeSwitch.checked = false;
            }
        };

        // Adiciona o "ouvinte" para o evento de MUDANÇA (change) no checkbox
        themeSwitch.addEventListener('change', (event) => {
            // Verifica se o switch está marcado (checked)
            if (event.target.checked) {
                body.classList.add('dark-mode');
                localStorage.setItem('theme', 'dark');
            } else {
                body.classList.remove('dark-mode');
                localStorage.setItem('theme', 'light');
            }
        });

        // Aplica o tema correto assim que a página é carregada
        document.addEventListener('DOMContentLoaded', applyTheme);
    </script>
